#include<iostream>
using namespace std;
int main()
{
	int x,arr[50];
	cout<<"Enter the number of elements-";
	cin>>x;4
	cout<<"Enter the elements- ";
	for(int i=0;i<x;i++){
	cin>>arr[i];
	}
	for(int i=0;i<x;i++)
	{
		for(int j=0;i<x-1;j++)
		{
			if(arr[j]<arr[j+1]){
				int temp=arr[j];
				arr[j]=arr[j+1];
				arr[j+1]=temp;
			}
		}
	}
	cout<<"After sorting elements: ";
	for(int i=0;i<x;i++){
		cout<<arr[i]<<" ";
	}
	int search;
	cout<<"Enter the number to search: ";
	cin>>search;
	int first = 0;
	int last = x-1;
	int middle = (first+last)/2;
	while (first <= last)
	{
		if(arr[middle] < search)
		{
			first = middle + 1;

		}
		else if(arr[middle] == search)
		{
			cout<<search<<" found at location "<<middle+1<<"\n";
			break;
		}
		else
		{
			 last = middle - 1;
		}
		middle = (first + last)/2;
	}
	if(first > last)
	{
		cout<<"Not found! "<<search<<" is not present in the list.";
	}
}
