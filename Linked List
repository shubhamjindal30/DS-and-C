#include<iostream>
using namespace std;

struct node
{
    int data;
    node *next;
};
class list{
private:
    node *head, *tail;
public:
    list(){
        head = NULL;
        tail = NULL;
    }
    void createnode(int value){
        node *temp=new node;
        temp->data  = value;
        temp->next = NULL;
        if(head==NULL){
            head = temp;
            tail = temp;
            temp = NULL;
        }
        else{
            tail->next = temp;
            tail = temp;
        }
    }
    void display(){
        node *temp;
        temp = head;
        while(temp!=NULL){
            cout << temp->data <<"\t";
            temp = temp->next;
        }
        cout << "\n";
    }
};
int main(){
    list arr;
    node linkedlist;
    int n,i;
    cout << "\nEnter the size of the list\n";
    cin >> n;
    cout << "\nEnter the elements in the list\n";
    for(i=0;i<n;i++){
        cin >> linkedlist.data;
        arr.createnode(linkedlist.data);
    }
    cout << "\nThe list is\n";
    arr.display();
}
