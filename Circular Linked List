#include<iostream>
using namespace std;

struct node{
  int data;
  node *next;
};

class list{
public:
  node *head, *tail;
  list(){
    head = NULL;
    tail = NULL;
  }
  void createnode(int value){
    node *temp = new node;
    temp->data = value;
    temp->next = head;
    if(head == NULL){
      head = temp;
      tail = temp;
      tail->next = head;
      temp = NULL;
    }
    else{
      tail->next = temp;
      tail = temp;
      tail->next = head;
    }
  }
  void display(){
    node *temp = new node;
    temp = head;
    do{
      cout << temp->data << "\t";
      temp = temp->next;
    }while(temp->next!=head->next);
    cout << endl;
  }
};
int main(){
  node element;
  list linkedlist;
  int n,i;
  cout << "\nEnter the size of the list:\t";
  cin >> n;
  cout << "\nEnter the elements of the list:\n";
  for(i=0;i<n;i++){
    cin >> element.data;
    linkedlist.createnode(element.data);
  }
  linkedlist.display();
}
